#!/usr/bin/env bash


# Function to launch and move
# Usage: launch_app <class> <command> <x> <y> <w> <h>
launch_app() {
    kitty --class "$1" -e "$2" &
    sleep 0.4 # Wait for window to exist
    hyprctl dispatch movewindowpixel exact "$3 $4,address:$(hyprctl clients -j | jq -r ".[] | select(.class==\"$1\") | .address")"
    hyprctl dispatch resizewindowpixel exact "$5 $6,address:$(hyprctl clients -j | jq -r ".[] | select(.class==\"$1\") | .address")"
}

# Ensure we are on the target workspace
hyprctl dispatch workspace 4

# Execute based on your JSON values
launch_app "kitty-btop" "btop" 17 54 779 461
launch_app "kitty-zsh" "zsh" 804 54 779 274
launch_app "kitty-cava" "cava" 804 336 779 647
# ... add your 4th, 5th, and 6th apps here
