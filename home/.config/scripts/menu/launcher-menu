#     ;;
# esac

kitty --single-instance --class launcher bash -lc '
  choice=$(PROVIDERS_FILE="$HOME/.config/sway-launcher-desktop/mainmenu.conf" HIST_FILE=""  sway-launcher-desktop) || exit 0
  case "$choice" in
    applications)
      sway-launcher-desktop
      ;;
    bookmarks)
      ~/.config/scripts/menu/bookmarks-launcher.sh
      ;;
    history)
      ~/.config/scripts/menu/history-launcher.sh
      ;;
    pass)
      ~/.config/scripts/menu/pass-launcher.sh
      ;;
    nix-doc)
      ~/.config/scripts/menu/nix-doc-launcher.sh
      ;;
    nix-packages)
      ~/.config/scripts/menu/nix-packages-launcher.sh
      ;;
    connect-bluetooth)
      ~/.config/scripts/menu/connect-bluetooth-launcher.sh
      ;;
  esac
'
