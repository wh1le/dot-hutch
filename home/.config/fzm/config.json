{
  "general": {
    "terminal": {
      "name": "kitty",
      "launch_options": [
        "-o",
        "font_size=13",
        "-o",
        "allow_remote_control=yes"
      ],

      "socket_path": "kitty_launcher"
    },

    "desktop": {
      "name": "hyprland",
      "launcher_class": "launcher"
    },

    "picker": {
      "name": "fzf",
      "launch_options": [
        "--ansi",
        "--margin=1,1,1,1",
        "--cycle",
        "--color=gutter:-1,border:238,scrollbar:238",
        "--prompt=> ",
        "--bind=esc:abort",
        "--bind=ctrl-d:preview-half-page-down",
        "--bind=ctrl-u:preview-half-page-up",
        "--bind=ctrl-f:preview-page-down",
        "--bind=ctrl-b:preview-page-up"
      ]
    }
  },

  "styles": {
    "default": {
      "desktop": {
        "width": "400",
        "height": "300",
        "position": "center"
      },
      "terminal": {
        "font-size": 13
      }
    },
    "wide": {
      "desktop": {
        "width": "700",
        "height": "400",
        "position": "center"
      },
      "terminal": {
        "font-size": 10
      }
    },
    "tall": {
      "desktop": {
        "width": "700",
        "height": "500",
        "position": "center"
      },
      "terminal": {
        "font-size": 10
      }
    }
  },

