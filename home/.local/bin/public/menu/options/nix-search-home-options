#!/usr/bin/env bash
set -euo pipefail

choice=$(
  nix-search-tv print --indexes home-manager |
    fzf-with-options \
      --margin="0,0,0,0" \
      --preview 'nix-search-tv preview --indexes home-manager {}' \
      --scheme history \
      --preview-window=right,55%,wrap \
      --preview-label='docs' \
      --preview-label-pos=1
)

notify-send "NixOS Search Copied" "$choice"

printf "$choice" | wl-copy
