#!/usr/bin/env bash

set -euo pipefail

declare -gA kittynator_config

export KITTYNATOR_CONFIG="$(dirname "$0")/../config/options.json"
declare -gA kittynator_config

get_kittynator_settings() {
  local result=$(jq -r '.kitty' "$KITTYNATOR_CONFIG")

  kittynator_config[socket_path]=$(echo "$result" | jq -r '.socket_path')
  kittynator_config[hyprland_class]=$(echo "$result" | jq -r '.hyprland_class')
  kittynator_config[startup_options]=$(echo "$result" | jq -r '.startup_options | join(" ")')
}

# Usage: get_kittynator_config; echo "${kitty_config[socket_path]}"
