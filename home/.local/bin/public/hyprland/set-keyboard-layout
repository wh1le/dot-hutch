#!/usr/bin/env bash

case "$(hostname)" in
thinkpad)
  hyprctl keyword input:kb_model thinkpad
  hyprctl keyword input:kb_options "ctrl:swapcaps,ctrl:nocaps,grp:win_space_toggle,ctrl:nocaps,altwin:swap_lalt_lwin"
  ;;
homepc)
  hyprctl keyword input:kb_model apple
  hyprctl keyword input:kb_options "ctrl:swapcaps,ctrl:nocaps,grp:win_space_toggle"
  ;;
esac
