#!/usr/bin/env bash

# brightnessctl -d "*::kbd_backlight" set "${1:-toggle}"

device="*::kbd_backlight"
if [[ "$1" == "toggle" || -z "$1" ]]; then
  [[ $(brightnessctl -d "$device" get) -eq 0 ]] && brightnessctl -d "$device" set 50% || brightnessctl -d "$device" set 0
else
  brightnessctl -d "$device" set "$1"
fi
