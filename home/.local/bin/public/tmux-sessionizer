#!/usr/bin/env bash

# Script from https://github.com/ThePrimeagen/.dotfiles/blob/master/bin/.local/scripts/tmux-sessionizer

# search_directories=${SEARCH_DIRECTORIES_PATHS:-"$HOME/Projects $HOME/code $HOME/obsidian $HOME/.config $HOME/dot"}
search_directories=(
  "$HOME/Projects"
  "$HOME/code"
  "$HOME/obsidian"
  "$HOME/.config"
  "$HOME/dot"
  "$HOME/.local/bin"
)

activeSessions=($(tmux list-sessions -F '#S' 2>/dev/null))

if [[ $# -eq 1 ]]; then
  selected=$1
else
  # selected=$(find $search_directories -mindepth 1 -maxdepth 1 -xtype d | fzf)
  directories=$(find "${search_directories[@]}" -mindepth 1 -maxdepth 1 -xtype d 2>/dev/null)
  directories+=("${activeSessions[@]}")

  echo "$directories"

  selected=$(printf "%s\n" "${directories[@]}" | fzf)
fi

if [[ -z $selected ]]; then
  exit 0
fi

if [[ " ${choices[*]} " == *" $selected "* ]]; then
  selected_name = "$selected"
else
  selected_name=$(basename "$selected" | tr . _)
fi

tmux_running=$(pgrep tmux)

if [[ -z $TMUX ]] && [[ -z $tmux_running ]]; then
  tmux new-session -s $selected_name -c $selected
  exit 0
fi

if ! tmux has-session -t=$selected_name 2>/dev/null; then
  tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t "$selected_name"
