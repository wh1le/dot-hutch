#!/usr/bin/env bash

set -euo pipefail

declare -gA fzm_config

export KITTYNATOR_CONFIG="$(dirname "$0")/../config/options.json"
declare -gA fzm_config

get_fzm_settings() {
  local result=$(jq -r '.kitty' "$KITTYNATOR_CONFIG")

  fzm_config[socket_path]=$(echo "$result" | jq -r '.socket_path')
  fzm_config[hyprland_class]=$(echo "$result" | jq -r '.hyprland_class')
  fzm_config[startup_options]=$(echo "$result" | jq -r '.startup_options | join(" ")')
}

# Usage: get_fzm_config; echo "${kitty_config[socket_path]}"
